@model IEnumerable<Garaget.Models.ParkedVehicle>

@{
    ViewBag.Title = "Index";
}

<h2>Cars in garage</h2>

<h4>
    <!--<span class="label label-primary">-->
    @Html.ActionLink("Check in vehicle", "CheckInVehicle")
    <!--</span>--->
</h4>
<table class="table table-hover sortable">
    <thead>
        <tr class="alert-info">
            <th>
                @Html.DisplayNameFor(model => model.VehicleType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Make)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NoWheels)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeOfCheckIn)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.VehicleType)
                </td>
                <td>
                    <strong>
                        @Html.DisplayFor(modelItem => item.RegNo)
                    </strong>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Color)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Make)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Model)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NoWheels)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TimeOfCheckIn)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Check Out", "CheckOutVehicle", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>

</table>
